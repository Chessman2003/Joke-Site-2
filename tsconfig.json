{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "DOM.Iterable",
            "esnext"
        ],
        "jsx": "react",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "src/index.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}